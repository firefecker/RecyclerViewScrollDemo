<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <android.support.v4.widget.NestedScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <RelativeLayout
                    android:id="@+id/layout_mon"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                <android.support.v7.widget.RecyclerView
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="50dp"
                        android:background="@android:color/white"
                        android:id="@+id/mMonRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                <TextView
                        android:onClick="testOnClick"
                        android:layout_centerHorizontal="true"
                        android:textColor="@android:color/white"
                        android:background="@drawable/selector_circle1"
                        android:text="早餐"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/layout_after"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/mAfterRecyclerView"
                        android:layout_marginTop="50dp"
                        android:background="@android:color/white"
                        android:nestedScrollingEnabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                <TextView
                        android:layout_centerHorizontal="true"
                        android:textColor="@android:color/white"
                        android:background="@drawable/selector_circle1"
                        android:text="午餐"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/layout_env"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="50dp"
                        android:background="@android:color/white"
                        android:nestedScrollingEnabled="false"
                        android:id="@+id/mEnvRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                <TextView
                        android:layout_centerHorizontal="true"
                        android:textColor="@android:color/white"
                        android:background="@drawable/selector_circle1"
                        android:text="晚餐"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>